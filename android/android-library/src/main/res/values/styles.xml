<resources>

    <style name="AppThemeLightLib" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="progressbar_round">@drawable/progressbar_round_light</item>
        <item name="toolbar_icon_bg">@drawable/toolbar_icon_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="toolbar_icon_text">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/toolbar_icon_bottom_bg</item>
    </style>

    <style name="AppThemeDarkLib" parent="Theme.AppCompat">
        <item name="progressbar_round">@drawable/progressbar_round_dark</item>
        <item name="toolbar_icon_bg">@drawable/toolbar_icon_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

</resources>
